@model List<string>

<h1>Send Push Notifications</h1>
@if (Model.Count() == 0)
{
    <p>There are no active subscribers</p>
}
else
{
    <form asp-action="Notify">
        <label for="message">Message: </label>
        <input id="message" name="message" /><br />
        @foreach (string user in Model)
        {
            <input type="radio" id="@(user)_identifier" name="user" value="@user">
            <label for="@(user)_identifier">@user</label>

            <br>
        }
        <button type="submit">Push</button>
    </form>
}